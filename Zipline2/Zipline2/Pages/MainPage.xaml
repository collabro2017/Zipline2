             xmlns:pages="clr-namespace:Zipline2.Pages;assembly=Zipline2"
             x:Class="Zipline2.Pages.MainPage"
                Title="Login Page"
                BackgroundColor="Gray">

    <ContentPage.Resources>
        
    </ContentPage.Resources>
    <ContentPage.Padding>
