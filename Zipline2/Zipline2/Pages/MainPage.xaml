    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout Padding="10, 10, 10, 10">
            <Image Source="zipline_logo.jpg" Aspect="AspectFill"  />
            <!--<Label Text="Enter your PIN"
                       TextColor="Black">-->
                <!--<Label.FontFamily>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="Android" Value="Lobster-Regular.ttf#Lobster-Regular" />
                    </OnPlatform>
                </Label.FontFamily>-->
            <!--</Label>-->            
            <Entry Placeholder="Enter your PIN here..." Keyboard="Numeric" />
            <Button Text="Log In"
                    WidthRequest="100"/>

        </StackLayout>
    </ContentPage.Content>

</pages:BasePage>
