<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Zipline2.Pages;assembly=Zipline2.Pages"
             x:Class="Zipline2.Pages.TablesPage"
             Title="Tables">
    <ContentPage.Resources>
        <ResourceDictionary>
            
        </ResourceDictionary>
    </ContentPage.Resources>   
    <ContentPage.Content>
      
        <StackLayout BackgroundColor="Black" 
                     Padding="10, 10"
                     Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Label Text="LOGGED IN AS: "
                       TextColor="White"
                       FontSize="Micro" />
                <Label Text="{Binding UserName}"
                   TextColor="LightBlue" 
                   FontSize="Small"
                   Margin="0, 0, 15, 0"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Tables"
                   TextColor="White" 
                   FontSize="20"
                   HorizontalOptions="Center" />
                
                <Button Text="{Binding InsideOutsideButtonText}" 
                        x:Name="InsideOutsideButton"
                        TextColor="Black"
                        BackgroundColor="LightYellow"
                        BorderColor="White"
                        BorderRadius="2"
                        BorderWidth="2"
                        HorizontalOptions="EndAndExpand"
                        Clicked="InsideOutsideButtonClicked"/>
            </StackLayout>
            <ListView ItemsSource="{Binding DisplayTables}"
                      x:Name="TableList"
                      ItemTapped="OnTableSelected"
                      SeparatorVisibility="Default"
                      RowHeight="55"
                      SeparatorColor="BlanchedAlmond">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell ImageSource="{Binding ImageName}"
                                   Text="{Binding TableName}"
                                   TextColor="Azure"
                                   DetailColor="Azure"
                                   Height="30">
                        </ImageCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView> 
        </StackLayout>
    </ContentPage.Content>
</local:BasePage>


